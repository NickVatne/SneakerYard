<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".screens.LoginFragment">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/username"
            android:hint="@string/username"
            android:fontFamily="sans-serif-smallcaps" android:layout_centerInParent="true"
            tools:layout_editor_absoluteY="251dp" tools:layout_editor_absoluteX="75dp"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password"
            android:layout_below="@+id/username"
            android:layout_alignStart="@+id/editText"
            android:hint="@string/password"
            android:fontFamily="sans-serif-smallcaps"
            tools:ignore="UnknownId" tools:layout_editor_absoluteY="302dp" tools:layout_editor_absoluteX="77dp"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:id="@+id/button"
            android:layout_below="@+id/password"
            android:layout_alignStart="@+id/editText2"
            android:layout_alignEnd="@+id/editText2"
            android:onClick="tryLogin"
            tools:ignore="UnknownId" tools:layout_editor_absoluteY="369dp" tools:layout_editor_absoluteX="145dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/error"
            android:layout_above="@+id/username"
            android:layout_centerHorizontal="true"
            android:textColor="#ffff0000" />
    <ImageView
            android:src="@drawable/logo"
            android:layout_width="372dp"
            android:layout_height="230dp" tools:layout_editor_absoluteY="-20dp"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/imageView"/>

</android.support.constraint.ConstraintLayout>
</ScrollView>